grades = []
count = int(input("How many grades? "))

for i in range(count):
    grade = float(input(f"Enter grade {i+1}: "))
    grades.append(grade)

average = sum(grades) / len(grades)

if average >= 90:
    letter = "A"
elif average >= 80:
    letter = "B"
elif average >= 70:
    letter = "C"
elif average >= 60:
    letter = "D"
else:
    letter = "F"

print("\nAverage:", round(average, 2))
print("Letter Grade:", letter)
